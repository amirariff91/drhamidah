        <!-- STEM — Atom/molecule with wreath -->
        <div class="group relative bg-gradient-to-br from-sage-50 to-white rounded-xl p-6 border border-sage-200/60 hover:shadow-lg hover:-translate-y-1 transition-[transform,box-shadow] duration-300">
          <div class="flex items-center gap-4 mb-3">
            <div class="flex-shrink-0 w-14 h-14 rounded-2xl bg-gradient-to-br from-sage-400 to-sage-600 flex items-center justify-center shadow-md shadow-sage-500/20">
              <svg class="w-8 h-8" viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg">
                <!-- Laurel leaves -->
                <ellipse cx="14" cy="28" rx="3" ry="5" fill="#fff" opacity=".35" transform="rotate(-25 14 28)"/>
                <ellipse cx="13" cy="36" rx="3" ry="5" fill="#fff" opacity=".35" transform="rotate(-10 13 36)"/>
                <ellipse cx="50" cy="28" rx="3" ry="5" fill="#fff" opacity=".35" transform="rotate(25 50 28)"/>
                <ellipse cx="51" cy="36" rx="3" ry="5" fill="#fff" opacity=".35" transform="rotate(10 51 36)"/>
                <path d="M15 44c-2-5-2-11-1-15" stroke="#fff" stroke-width="1.5" fill="none" stroke-linecap="round" opacity=".5"/>
                <path d="M49 44c2-5 2-11 1-15" stroke="#fff" stroke-width="1.5" fill="none" stroke-linecap="round" opacity=".5"/>
                <!-- Atom orbits -->
                <ellipse cx="32" cy="32" rx="14" ry="6" fill="none" stroke="#fff" stroke-width="1.5" transform="rotate(0 32 32)" opacity=".7"/>
                <ellipse cx="32" cy="32" rx="14" ry="6" fill="none" stroke="#fff" stroke-width="1.5" transform="rotate(60 32 32)" opacity=".7"/>
                <ellipse cx="32" cy="32" rx="14" ry="6" fill="none" stroke="#fff" stroke-width="1.5" transform="rotate(120 32 32)" opacity=".7"/>
                <!-- Nucleus -->
                <circle cx="32" cy="32" r="4" fill="#fff"/>
                <!-- Electrons -->
                <circle cx="46" cy="32" r="2" fill="#fff" opacity=".9"/>
                <circle cx="25" cy="22" r="2" fill="#fff" opacity=".9"/>
                <circle cx="25" cy="42" r="2" fill="#fff" opacity=".9"/>
              </svg>
            </div>
            <div>
              <p class="font-bold text-navy-900">STEM Principal Award</p>
              <p class="text-xs text-navy-500">2018 · State Level</p>
            </div>
          </div>
          <p class="text-sm text-navy-600">Recognised for integrating STEM education across curriculum and school culture.</p>
        </div>

        <!-- DUTA Digital — Monitor with binary/circuit -->
        <div class="group relative bg-gradient-to-br from-navy-50 to-white rounded-xl p-6 border border-navy-200/60 hover:shadow-lg hover:-translate-y-1 transition-[transform,box-shadow] duration-300">
          <div class="flex items-center gap-4 mb-3">
            <div class="flex-shrink-0 w-14 h-14 rounded-2xl bg-gradient-to-br from-navy-500 to-navy-700 flex items-center justify-center shadow-md shadow-navy-500/20">
              <svg class="w-8 h-8" viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg">
                <!-- Laurel leaves -->
                <ellipse cx="12" cy="28" rx="3" ry="5" fill="#fff" opacity=".3" transform="rotate(-25 12 28)"/>
                <ellipse cx="11" cy="36" rx="3" ry="5" fill="#fff" opacity=".3" transform="rotate(-10 11 36)"/>
                <ellipse cx="52" cy="28" rx="3" ry="5" fill="#fff" opacity=".3" transform="rotate(25 52 28)"/>
                <ellipse cx="53" cy="36" rx="3" ry="5" fill="#fff" opacity=".3" transform="rotate(10 53 36)"/>
                <!-- Monitor -->
                <rect x="18" y="16" width="28" height="22" rx="3" fill="#fff"/>
                <!-- Screen content -->
                <rect x="21" y="19" width="22" height="14" rx="1" fill="#243b53" opacity=".15"/>
                <text x="24" y="28" fill="#fff" font-size="7" font-family="monospace" opacity=".9">01</text>
                <text x="35" y="28" fill="#fff" font-size="7" font-family="monospace" opacity=".7">10</text>
                <text x="24" y="32" fill="#38a169" font-size="5" font-family="monospace" opacity=".9">DUTA</text>
                <!-- Stand -->
                <rect x="28" y="38" width="8" height="4" rx="1" fill="#fff" opacity=".8"/>
                <rect x="24" y="42" width="16" height="3" rx="1.5" fill="#fff" opacity=".6"/>
