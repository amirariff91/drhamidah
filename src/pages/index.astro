      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-5">
        <!-- National PIBG — Trophy -->
        <div class="group relative bg-gradient-to-br from-gold-50 to-white rounded-xl p-6 border border-gold-200/60 hover:shadow-lg hover:-translate-y-1 transition-[transform,box-shadow] duration-300">
          <div class="flex items-center gap-4 mb-3">
            <div class="flex-shrink-0 w-16 h-16 rounded-2xl bg-gradient-to-br from-gold-400 to-gold-600 flex items-center justify-center shadow-md shadow-gold-500/20">
              <svg class="w-10 h-10" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M16 8h16v12a8 8 0 01-16 0V8z" fill="#fff"/>
                <path d="M16 12h-4a3 3 0 010-6h4" stroke="#fff" stroke-width="2.5" fill="none" stroke-linecap="round"/>
                <path d="M32 12h4a3 3 0 000-6h-4" stroke="#fff" stroke-width="2.5" fill="none" stroke-linecap="round"/>
                <rect x="21" y="28" width="6" height="5" rx="1" fill="#fff" opacity=".85"/>
