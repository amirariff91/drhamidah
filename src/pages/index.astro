                <ellipse cx="12" cy="33" rx="3" ry="4" fill="#fff" opacity=".4" transform="rotate(-10 12 33)"/>
                <ellipse cx="50" cy="26" rx="3" ry="4" fill="#fff" opacity=".4" transform="rotate(20 50 26)"/>
                <ellipse cx="52" cy="33" rx="3" ry="4" fill="#fff" opacity=".4" transform="rotate(10 52 33)"/>
                <!-- Trophy -->
                <path d="M24 18h16v10a8 8 0 01-16 0V18z" fill="#fff"/>
                <rect x="29" y="36" width="6" height="6" rx="1" fill="#fff" opacity=".8"/>
                <rect x="25" y="42" width="14" height="4" rx="2" fill="#fff"/>
                <!-- Handles -->
                <path d="M24 22h-3a3 3 0 010-6h3" stroke="#fff" stroke-width="2" fill="none" opacity=".8"/>
                <path d="M40 22h3a3 3 0 000-6h-3" stroke="#fff" stroke-width="2" fill="none" opacity=".8"/>
                <!-- Star on trophy -->
                <polygon points="32,20 33.5,24 38,24 34.5,26.5 36,30.5 32,28 28,30.5 29.5,26.5 26,24 30.5,24" fill="#f0b429" opacity=".9"/>
              </svg>
            </div>
            <div>
              <p class="font-bold text-navy-900">National PIBG Excellence</p>
              <p class="text-xs text-navy-500">2016 · National Level</p>
            </div>
          </div>
          <p class="text-sm text-navy-600">Top parent-community engagement among all primary schools in Malaysia.</p>
