---
import BaseLayout from '../layouts/BaseLayout.astro';
import AnimatedStats from '../components/AnimatedStats.jsx';
import CareerJourney from '../components/CareerJourney.jsx';

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Dr. Hamidah Che Abdul Hamid",
  "jobTitle": "Education Leader & Researcher",
  "description": "30 years transforming Malaysian schools. Headteacher of 4 primary schools managing up to 1,700 students. PhD researcher in educational leadership and resilience.",
  "url": "https://drhamidah.com",
  "email": "hamidahcheabdulhamid5678@gmail.com",
  "telephone": "+60129621017",
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Kota Bharu",
    "addressRegion": "Kelantan",
    "addressCountry": "MY"
  },
  "alumniOf": [
    { "@type": "CollegeOrUniversity", "name": "Universiti Sultan Zainal Abidin (UniSZA)" },
    { "@type": "CollegeOrUniversity", "name": "Universiti Teknologi MARA (UiTM)" },
    { "@type": "CollegeOrUniversity", "name": "Universiti Putra Malaysia (UPM)" }
  ],
  "award": [
    "National-Level PIBG Excellence Award 2016",
    "State STEM Principal Award 2018",
    "State DUTA Award 2021 & 2022",
    "Ahli Setia Mahkota Kelantan (A.S.K.)"
  ],
  "knowsAbout": [
    "Educational Leadership",
    "School Resilience",
    "Primary Education",
    "STEM Education",
    "Digital Transformation in Schools"
  ],
  "sameAs": [
    "https://journal.unisza.edu.my/jmtp/index.php/jmtp/article/view/221",
    "https://www.academia.edu/106024754/"
  ]
};

const heroStats = [
  { value: 30, label: "Years in Education" },
  { value: 4, label: "Schools Led" },
  { value: 1700, label: "Students (Current School)" },
  { value: 300, label: "UPSR Improvement (SK Islah)", suffix: "%" },
];
---

<BaseLayout
  title="Dr. Hamidah Che Abdul Hamid — Education Leader & Researcher | Malaysia"
  description="30 years transforming Malaysian schools. Headteacher managing 1,700+ students at a High-Performance School (SBT). PhD researcher in educational leadership and resilience."
  jsonLd={jsonLd}
>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-navy-900 via-navy-800 to-navy-900 text-white overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-20 right-20 w-72 h-72 bg-gold-400 rounded-full blur-3xl"></div>
      <div class="absolute bottom-10 left-10 w-96 h-96 bg-sage-400 rounded-full blur-3xl"></div>
    </div>
    <div class="relative max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-20 sm:py-28">
      <div class="flex flex-col md:flex-row items-center gap-10">
        <!-- Headshot -->
        <div class="flex-shrink-0">
          <div class="w-40 h-40 sm:w-48 sm:h-48 rounded-full overflow-hidden border-4 border-gold-400 shadow-2xl shadow-gold-400/20">
            <img src="/images/hamidah-headshot.jpg" alt="Dr. Hamidah Che Abdul Hamid" class="w-full h-full object-cover" width="400" height="400" loading="eager" />
          </div>
        </div>
        <!-- Text -->
        <div class="max-w-3xl text-center md:text-left">
          <p class="text-gold-400 font-medium text-sm uppercase tracking-widest mb-4">Education Leader · Researcher · School Transformation</p>
          <h1 class="font-serif text-4xl sm:text-5xl lg:text-6xl font-bold leading-tight mb-6">
            Dr. Hamidah<br />Che Abdul Hamid
          </h1>
          <p class="text-xl sm:text-2xl text-navy-200 leading-relaxed mb-4">
            From a rural school of 250 to one of Kelantan's largest High-Performance Schools with <strong class="text-white">1,700 students</strong>. 30 years. 4 schools. Zero&nbsp;failures.
          </p>
          <p class="inline-flex items-center gap-2 bg-gold-500/15 text-gold-400 text-sm font-semibold px-3 py-1.5 rounded-full mb-8 border border-gold-500/30">
            <svg class="w-4 h-4 flex-shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><rect x="3" y="4" width="18" height="18" rx="2"/><path d="M16 2v4"/><path d="M8 2v4"/><path d="M3 10h18"/></svg>
            Available March 2026
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center md:justify-start">
            <a href="/contact" class="inline-flex items-center justify-center px-6 py-3 bg-gold-500 hover:bg-gold-600 text-navy-900 font-semibold rounded-lg transition-[background-color,box-shadow] duration-200 hover:shadow-lg hover:shadow-gold-500/25 text-center focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-gold-500 focus-visible:ring-offset-2">
              Schedule a Conversation →
            </a>
            <a href="/portfolio" class="inline-flex items-center justify-center px-6 py-3 border-2 border-navy-400 hover:border-white text-white font-medium rounded-lg transition-[border-color] duration-200 text-center focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-gold-500 focus-visible:ring-offset-2">
              See 4 Schools Transformed →
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Key Numbers (Animated) -->
  <section class="bg-navy-50 py-16 sm:py-20 border-b border-navy-100">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <p class="text-center text-sm font-medium text-navy-400 uppercase tracking-widest mb-8">The Numbers</p>
      <AnimatedStats client:visible stats={heroStats} />
    </div>
  </section>

  <!-- Career Journey (Animated Timeline) -->
  <section class="py-16 sm:py-20 bg-white">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="font-serif text-3xl font-bold text-navy-900 mb-3">The Journey</h2>
        <p class="text-navy-500 max-w-xl mx-auto">From classroom teacher to leading one of Kelantan's premier schools — a consistent upward trajectory.</p>
      </div>
      <CareerJourney client:visible />
      <div class="text-center mt-10">
        <a href="/portfolio" class="inline-flex items-center text-navy-700 font-medium hover:text-gold-600 transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-gold-500 focus-visible:ring-offset-2 rounded">
          See Full Portfolio →
        </a>
      </div>
    </div>
  </section>

  <!-- Research -->
  <section class="py-16 sm:py-20 bg-navy-50">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="md:flex md:items-start md:gap-12">
        <div class="md:w-1/2 mb-8 md:mb-0">
          <h2 class="font-serif text-3xl font-bold text-navy-900 mb-4">She Didn't Just Lead Schools — She Studied What Makes Leaders Last</h2>
          <p class="text-navy-600 leading-relaxed mb-4">
            The <strong>Resilient Leadership Index</strong> — a mathematical framework that turns resilience into something measurable, teachable, and&nbsp;scalable.
          </p>
          <p class="text-navy-600 leading-relaxed mb-6">
            3 published papers. PhD at UniSZA (final stage). She bridges academic theory and real-world school operations.
          </p>
          <a href="/research" class="inline-flex items-center text-navy-700 font-medium hover:text-gold-600 transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-gold-500 focus-visible:ring-offset-2 rounded">
            View Publications →
          </a>
        </div>
        <div class="md:w-1/2">
          <div class="bg-white rounded-xl p-6 border border-navy-100 shadow-sm">
            <h3 class="font-serif text-lg font-bold text-navy-900 mb-3">Featured Paper</h3>
            <p class="text-sm text-navy-700 font-medium mb-2">"Modelling Resilient Educational Leaders for Resilient Schools"</p>
            <p class="text-xs text-navy-500 mb-4">JMTP, UniSZA, 2022</p>
            <p class="text-sm text-navy-600 mb-4">How high-performing headteachers develop resilience during adversity — based on interviews with 7 headteachers and 2 education experts across Malaysia.</p>
            <a href="https://doi.org/10.37231/jmtp.2022.3.2.221" target="_blank" rel="noopener" class="text-sm text-gold-600 hover:text-gold-700 font-medium">Read Paper →</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Quote -->
  <section class="py-12 bg-navy-900">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <blockquote class="font-serif text-xl sm:text-2xl text-white leading-relaxed italic mb-6">
        "Resiliency is an absolute must to keep people engaged, passionate, and&nbsp;committed."
      </blockquote>
      <cite class="text-navy-300 text-sm not-italic">
        — From Dr. Hamidah's research, <span class="text-gold-400">Journal of Management Theory and Practice</span> (2022)
      </cite>
    </div>
  </section>

  <!-- RLI Assessment Banner -->
  <section class="py-16 sm:py-20 bg-gradient-to-br from-gold-50 via-white to-sage-50">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="relative bg-gradient-to-br from-navy-900 via-navy-800 to-navy-900 rounded-2xl p-8 sm:p-12 overflow-hidden">
        <div class="absolute inset-0 opacity-10">
          <div class="absolute top-0 right-0 w-64 h-64 bg-gold-400 rounded-full blur-3xl"></div>
          <div class="absolute bottom-0 left-0 w-48 h-48 bg-sage-400 rounded-full blur-3xl"></div>
        </div>
        <div class="relative md:flex md:items-center md:gap-10">
          <div class="md:w-2/3 mb-8 md:mb-0">
            <span class="inline-block bg-gold-500 text-navy-900 text-xs font-bold px-3 py-1 rounded-full mb-4 uppercase tracking-wider">Free · Based on PhD Research</span>
            <h2 class="font-serif text-3xl sm:text-4xl font-bold text-white mb-4">How Resilient Is Your Leadership?</h2>
            <p class="text-navy-200 text-lg leading-relaxed mb-2">
              Score yourself on the <strong class="text-white">Resilient Leadership Index</strong> — built from Dr. Hamidah's PhD research at&nbsp;UniSZA.
            </p>
            <p class="text-navy-300 mb-6">12 questions · 3 minutes · Instant results · No&nbsp;sign-up</p>
            <a href="/assessment" class="inline-flex items-center justify-center px-8 py-4 bg-gold-500 hover:bg-gold-600 text-navy-900 font-bold rounded-lg transition-[background-color,box-shadow] duration-200 hover:shadow-lg hover:shadow-gold-500/25 text-lg focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-gold-500 focus-visible:ring-offset-2">
              Take the Free Assessment →
            </a>
          </div>
          <div class="md:w-1/3 flex justify-center">
            <div class="text-center">
              <div class="inline-flex items-center justify-center w-32 h-32 rounded-full bg-gradient-to-br from-gold-400 to-gold-600 text-navy-900 mb-3">
                <div>
                  <p class="text-3xl font-bold font-serif">RLI</p>
                  <p class="text-xs font-medium">Score</p>
                </div>
              </div>
              <p class="text-navy-300 text-sm">Discover your resilience profile</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Awards & Recognition -->
  <section class="py-16 sm:py-20 bg-white">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="font-serif text-3xl font-bold text-navy-900 mb-3 text-center">Awards & Recognition</h2>
      <p class="text-navy-500 text-center mb-10 max-w-xl mx-auto">Recognised at national and state levels for excellence in education, community engagement, and digital&nbsp;innovation.</p>
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-5">
        <!-- National PIBG -->
        <div class="group relative bg-gradient-to-br from-gold-50 to-white rounded-xl p-5 border border-gold-200/60 hover:shadow-lg hover:-translate-y-1 transition-[transform,box-shadow] duration-300">
          <div class="flex items-center gap-4 mb-3">
            <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-gold-500 text-white flex items-center justify-center shadow-sm">
              <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M6 9H4.5a2.5 2.5 0 0 1 0-5H6"/><path d="M18 9h1.5a2.5 2.5 0 0 0 0-5H18"/><path d="M4 22h16"/><path d="M10 14.66V17c0 .55-.47.98-.97 1.21C7.85 18.75 7 20 7 22"/><path d="M14 14.66V17c0 .55.47.98.97 1.21C16.15 18.75 17 20 17 22"/><path d="M18 2H6v7a6 6 0 0 0 12 0V2Z"/></svg>
            </div>
            <div>
              <p class="font-bold text-navy-900">National PIBG Excellence</p>
              <p class="text-xs text-navy-500">2016 · National Level</p>
            </div>
          </div>
          <p class="text-sm text-navy-600">Top parent-community engagement among all primary schools in Malaysia.</p>
        </div>

        <!-- STEM -->
        <div class="group relative bg-gradient-to-br from-sage-50 to-white rounded-xl p-5 border border-sage-200/60 hover:shadow-lg hover:-translate-y-1 transition-[transform,box-shadow] duration-300">
          <div class="flex items-center gap-4 mb-3">
            <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-sage-500 text-white flex items-center justify-center shadow-sm">
              <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M9.5 2A2.5 2.5 0 0 1 12 4.5v15a2.5 2.5 0 0 1-4.96.44 2.5 2.5 0 0 1-2.96-3.08 3 3 0 0 1-.34-5.58 2.5 2.5 0 0 1 1.32-4.24 2.5 2.5 0 0 1 1.98-3A2.5 2.5 0 0 1 9.5 2Z"/><path d="M14.5 2A2.5 2.5 0 0 0 12 4.5v15a2.5 2.5 0 0 0 4.96.44 2.5 2.5 0 0 0 2.96-3.08 3 3 0 0 0 .34-5.58 2.5 2.5 0 0 0-1.32-4.24 2.5 2.5 0 0 0-1.98-3A2.5 2.5 0 0 0 14.5 2Z"/></svg>
            </div>
            <div>
              <p class="font-bold text-navy-900">STEM Principal Award</p>
              <p class="text-xs text-navy-500">2018 · State Level</p>
            </div>
          </div>
          <p class="text-sm text-navy-600">Recognised for integrating STEM education across curriculum and school culture.</p>
        </div>

        <!-- DUTA Digital -->
        <div class="group relative bg-gradient-to-br from-navy-50 to-white rounded-xl p-5 border border-navy-200/60 hover:shadow-lg hover:-translate-y-1 transition-[transform,box-shadow] duration-300">
          <div class="flex items-center gap-4 mb-3">
            <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-navy-600 text-white flex items-center justify-center shadow-sm">
              <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="3" width="20" height="14" rx="2"/><path d="M8 21h8"/><path d="M12 17v4"/><path d="m7 9 3 3-3 3"/><path d="M13 15h3"/></svg>
            </div>
            <div>
              <p class="font-bold text-navy-900">DUTA Digital Award</p>
              <p class="text-xs text-navy-500">2021 & 2022 · State Level</p>
            </div>
          </div>
          <p class="text-sm text-navy-600">Back-to-back wins for digital transformation and technology adoption in schools.</p>
        </div>

        <!-- State Honour -->
        <div class="group relative bg-gradient-to-br from-gold-50 to-white rounded-xl p-5 border border-gold-200/60 hover:shadow-lg hover:-translate-y-1 transition-[transform,box-shadow] duration-300">
          <div class="flex items-center gap-4 mb-3">
            <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-gold-600 text-white flex items-center justify-center shadow-sm">
              <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2L3 7v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-9-5Z"/><path d="m9 12 2 2 4-4"/></svg>
            </div>
            <div>
              <p class="font-bold text-navy-900">A.S.K. State Honour</p>
              <p class="text-xs text-navy-500">Ahli Setia Mahkota Kelantan</p>
            </div>
          </div>
          <p class="text-sm text-navy-600">Conferred by the Sultan of Kelantan for distinguished service to the state.</p>
        </div>

        <!-- Excellent Service -->
        <div class="group relative bg-gradient-to-br from-navy-50 to-white rounded-xl p-5 border border-navy-200/60 hover:shadow-lg hover:-translate-y-1 transition-[transform,box-shadow] duration-300">
          <div class="flex items-center gap-4 mb-3">
            <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-navy-500 text-white flex items-center justify-center shadow-sm">
              <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/></svg>
            </div>
            <div>
              <p class="font-bold text-navy-900">Excellent Service Awards</p>
              <p class="text-xs text-navy-500">2000, 2007, 2018, 2025</p>
            </div>
          </div>
          <p class="text-sm text-navy-600">Four-time recipient of the Anugerah Perkhidmatan Cemerlang across her career.</p>
        </div>

        <!-- PhD -->
        <div class="group relative bg-gradient-to-br from-gold-50 to-white rounded-xl p-5 border border-gold-200/60 hover:shadow-lg hover:-translate-y-1 transition-[transform,box-shadow] duration-300">
          <div class="flex items-center gap-4 mb-3">
            <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-gold-500 text-white flex items-center justify-center shadow-sm">
              <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M21.42 10.922a1 1 0 0 0-.019-1.838L12.83 5.18a2 2 0 0 0-1.66 0L2.6 9.08a1 1 0 0 0 0 1.832l8.57 3.908a2 2 0 0 0 1.66 0z"/><path d="M22 10v6"/><path d="M6 12.5V16a6 3 0 0 0 12 0v-3.5"/></svg>
            </div>
            <div>
              <p class="font-bold text-navy-900">PhD (Final Stage)</p>
              <p class="text-xs text-navy-500">UniSZA · Viva Passed Dec 2025</p>
            </div>
          </div>
          <p class="text-sm text-navy-600">Resilient Leadership Index — a mathematical framework for measuring school leader resilience.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16 sm:py-20 bg-navy-900 text-white">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-serif text-3xl font-bold mb-4">Looking for a Proven School Leader?</h2>
      <p class="text-navy-200 text-lg mb-8 leading-relaxed">
        30 years of operational experience. A PhD framework for building resilient schools. A track record no other candidate can&nbsp;match.
      </p>
      <a href="/contact" class="inline-flex items-center justify-center px-8 py-4 bg-gold-500 hover:bg-gold-600 text-navy-900 font-bold rounded-lg transition-[background-color,box-shadow] duration-200 text-lg focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-gold-500 focus-visible:ring-offset-2 hover:shadow-lg hover:shadow-gold-500/25">
        Schedule a Conversation →
      </a>
    </div>
  </section>
</BaseLayout>
