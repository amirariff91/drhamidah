              <svg class="w-10 h-10" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
                <rect x="6" y="6" width="36" height="26" rx="3" fill="#fff"/>
                <rect x="9" y="9" width="30" height="18" rx="1.5" fill="#243b53" opacity=".15"/>
                <path d="M15 17l5 5-5 5" stroke="#fff" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M24 27h9" stroke="#fff" stroke-width="2.5" stroke-linecap="round"/>
