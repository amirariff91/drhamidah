        <!-- School 4: navy accent -->
        <div class="relative flex gap-5 group">
          <div class="relative z-10 flex-shrink-0 w-10 h-10 rounded-full bg-navy-400 text-white text-xs font-bold flex items-center justify-center ring-4 ring-navy-50 shadow-sm" aria-hidden="true">1st</div>
