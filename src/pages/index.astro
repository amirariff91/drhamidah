---
import BaseLayout from '../layouts/BaseLayout.astro';
import AnimatedStats from '../components/AnimatedStats.jsx';
import CareerJourney from '../components/CareerJourney.jsx';

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Dr. Hamidah Che Abdul Hamid",
  "jobTitle": "Education Leader & Researcher",
  "description": "30 years transforming Malaysian schools. Headteacher of 4 primary schools managing up to 1,700 students. PhD researcher in educational leadership and resilience.",
  "url": "https://drhamidah.com",
  "email": "hamidahcheabdulhamid5678@gmail.com",
  "telephone": "+60129621017",
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Kota Bharu",
    "addressRegion": "Kelantan",
    "addressCountry": "MY"
  },
  "alumniOf": [
    { "@type": "CollegeOrUniversity", "name": "Universiti Sultan Zainal Abidin (UniSZA)" },
    { "@type": "CollegeOrUniversity", "name": "Universiti Teknologi MARA (UiTM)" },
    { "@type": "CollegeOrUniversity", "name": "Universiti Putra Malaysia (UPM)" }
  ],
  "award": [
    "National-Level PIBG Excellence Award 2016",
    "State STEM Principal Award 2018",
    "State DUTA Award 2021 & 2022",
    "Ahli Setia Mahkota Kelantan (A.S.K.)"
  ],
  "knowsAbout": [
    "Educational Leadership",
    "School Resilience",
    "Primary Education",
    "STEM Education",
    "Digital Transformation in Schools"
  ],
  "sameAs": [
    "https://journal.unisza.edu.my/jmtp/index.php/jmtp/article/view/221",
    "https://www.academia.edu/106024754/"
  ]
};

const heroStats = [
  { value: 30, label: "Years in Education" },
  { value: 4, label: "Schools Led" },
  { value: 1700, label: "Students (Current School)" },
  { value: 300, label: "UPSR Improvement (SK Islah)", suffix: "%" },
];
---

<BaseLayout
  title="Dr. Hamidah Che Abdul Hamid — Education Leader & Researcher | Malaysia"
  description="30 years transforming Malaysian schools. Headteacher managing 1,700+ students at a High-Performance School (SBT). PhD researcher in educational leadership and resilience."
  jsonLd={jsonLd}
>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-navy-900 via-navy-800 to-navy-900 text-white overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-20 right-20 w-72 h-72 bg-gold-400 rounded-full blur-3xl"></div>
      <div class="absolute bottom-10 left-10 w-96 h-96 bg-sage-400 rounded-full blur-3xl"></div>
    </div>
    <div class="relative max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-20 sm:py-28">
      <div class="flex flex-col md:flex-row items-center gap-10">
        <!-- Headshot -->
        <div class="flex-shrink-0">
          <div class="w-40 h-40 sm:w-48 sm:h-48 rounded-full overflow-hidden border-4 border-gold-400 shadow-2xl shadow-gold-400/20">
            <img src="/images/hamidah-headshot.jpg" alt="Dr. Hamidah Che Abdul Hamid" class="w-full h-full object-cover" width="400" height="400" loading="eager" />
          </div>
        </div>
        <!-- Text -->
        <div class="max-w-3xl text-center md:text-left">
          <p class="text-gold-400 font-medium text-sm uppercase tracking-widest mb-4">Education Leader · Researcher · School Transformation</p>
          <h1 class="font-serif text-4xl sm:text-5xl lg:text-6xl font-bold leading-tight mb-6">
            Dr. Hamidah<br />Che Abdul Hamid
          </h1>
          <p class="text-xl sm:text-2xl text-navy-200 leading-relaxed mb-4">
            From a rural school of 250 to one of Kelantan's largest High-Performance Schools with <strong class="text-white">1,700 students</strong>. 30 years. 4 schools. Zero&nbsp;failures.
          </p>
          <p class="inline-flex items-center gap-2 bg-gold-500/15 text-gold-400 text-sm font-semibold px-3 py-1.5 rounded-full mb-8 border border-gold-500/30">
            <svg class="w-4 h-4 flex-shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><rect x="3" y="4" width="18" height="18" rx="2"/><path d="M16 2v4"/><path d="M8 2v4"/><path d="M3 10h18"/></svg>
            Available March 2026
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center md:justify-start">
            <a href="/contact" class="inline-flex items-center justify-center px-6 py-3 bg-gold-500 hover:bg-gold-600 text-navy-900 font-semibold rounded-lg transition-[background-color,box-shadow] duration-200 hover:shadow-lg hover:shadow-gold-500/25 text-center focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-gold-500 focus-visible:ring-offset-2">
              Schedule a Conversation →
            </a>
            <a href="/portfolio" class="inline-flex items-center justify-center px-6 py-3 border-2 border-navy-400 hover:border-white text-white font-medium rounded-lg transition-[border-color] duration-200 text-center focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-gold-500 focus-visible:ring-offset-2">
              See 4 Schools Transformed →
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Key Numbers (Animated) -->
  <section class="bg-navy-50 py-16 sm:py-20 border-b border-navy-100">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <p class="text-center text-sm font-medium text-navy-400 uppercase tracking-widest mb-8">The Numbers</p>
      <AnimatedStats client:visible stats={heroStats} />
    </div>
  </section>

  <!-- Career Journey (Animated Timeline) -->
  <section class="py-16 sm:py-20 bg-white">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="font-serif text-3xl font-bold text-navy-900 mb-3">The Journey</h2>
        <p class="text-navy-500 max-w-xl mx-auto">From classroom teacher to leading one of Kelantan's premier schools — a consistent upward trajectory.</p>
      </div>
      <CareerJourney client:visible />
      <div class="text-center mt-10">
        <a href="/portfolio" class="inline-flex items-center text-navy-700 font-medium hover:text-gold-600 transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-gold-500 focus-visible:ring-offset-2 rounded">
          See Full Portfolio →
        </a>
      </div>
    </div>
  </section>

  <!-- Research -->
  <section class="py-16 sm:py-20 bg-navy-50">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="md:flex md:items-start md:gap-12">
        <div class="md:w-1/2 mb-8 md:mb-0">
          <h2 class="font-serif text-3xl font-bold text-navy-900 mb-4">She Didn't Just Lead Schools — She Studied What Makes Leaders Last</h2>
          <p class="text-navy-600 leading-relaxed mb-4">
            The <strong>Resilient Leadership Index</strong> — a mathematical framework that turns resilience into something measurable, teachable, and&nbsp;scalable.
          </p>
          <p class="text-navy-600 leading-relaxed mb-6">
            3 published papers. PhD candidate at UniSZA. She bridges academic theory and real-world school operations.
          </p>
          <a href="/research" class="inline-flex items-center text-navy-700 font-medium hover:text-gold-600 transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-gold-500 focus-visible:ring-offset-2 rounded">
            View Publications →
          </a>
        </div>
        <div class="md:w-1/2">
          <div class="bg-white rounded-xl p-6 border border-navy-100 shadow-sm">
            <h3 class="font-serif text-lg font-bold text-navy-900 mb-3">Featured Paper</h3>
            <p class="text-sm text-navy-700 font-medium mb-2">"Modelling Resilient Educational Leaders for Resilient Schools"</p>
            <p class="text-xs text-navy-500 mb-4">JMTP, UniSZA, 2022</p>
            <p class="text-sm text-navy-600 mb-4">How high-performing headteachers develop resilience during adversity — based on interviews with 7 headteachers and 2 education experts across Malaysia.</p>
            <a href="https://doi.org/10.37231/jmtp.2022.3.2.221" target="_blank" rel="noopener" class="text-sm text-gold-600 hover:text-gold-700 font-medium">Read Paper →</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Quote -->
  <section class="py-14 bg-gradient-to-br from-navy-800 to-navy-900 relative overflow-hidden">
    <div class="absolute inset-0 opacity-5">
      <div class="absolute top-0 left-1/4 w-40 h-40 bg-gold-400 rounded-full blur-3xl"></div>
    </div>
    <div class="relative max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
