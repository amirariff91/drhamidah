---
interface Props {
  title: string;
  description: string;
  canonical?: string;
  ogImage?: string;
  jsonLd?: object;
}

const { title, description, canonical, ogImage, jsonLd } = Astro.props;
const siteUrl = 'https://drhamidah.cepathosting.com';
const canonicalUrl = canonical || new URL(Astro.url.pathname, siteUrl).toString();
const ogImg = ogImage || `${siteUrl}/og-default.jpg`;
---

<!doctype html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImg} />
    <meta property="og:locale" content="en_MY" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImg} />

    <!-- Geo Meta -->
    <meta name="geo.region" content="MY-03" />
    <meta name="geo.placename" content="Kota Bharu, Kelantan" />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Preload fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />

    <!-- Person JSON-LD -->
    {jsonLd && (
      <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
    )}
  </head>
  <body class="bg-white text-navy-900 font-sans antialiased">
    <!-- Navigation -->
    <nav class="sticky top-0 z-50 bg-white/95 backdrop-blur border-b border-navy-100">
      <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <a href="/" class="font-serif text-xl font-bold text-navy-900 hover:text-gold-600 transition-colors">
            Dr. Hamidah
          </a>
          <div class="hidden sm:flex items-center space-x-8">
            <a href="/" class="text-sm font-medium text-navy-600 hover:text-navy-900 transition-colors">Home</a>
            <a href="/about" class="text-sm font-medium text-navy-600 hover:text-navy-900 transition-colors">About</a>
            <a href="/portfolio" class="text-sm font-medium text-navy-600 hover:text-navy-900 transition-colors">Portfolio</a>
            <a href="/research" class="text-sm font-medium text-navy-600 hover:text-navy-900 transition-colors">Research</a>
            <a href="/assessment" class="text-sm font-medium text-gold-600 hover:text-gold-700 transition-colors">RLI Assessment</a>
            <a href="/contact" class="text-sm font-medium text-white bg-navy-800 hover:bg-navy-700 px-4 py-2 rounded-lg transition-colors">Get in Touch</a>
          </div>
          <!-- Mobile menu button -->
          <button id="mobile-menu-btn" class="sm:hidden p-2 rounded-md text-navy-600 hover:text-navy-900 hover:bg-navy-50" aria-label="Open menu">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </div>
      <!-- Mobile menu -->
      <div id="mobile-menu" class="hidden sm:hidden border-t border-navy-100 bg-white">
        <div class="px-4 py-3 space-y-2">
          <a href="/" class="block py-2 text-sm font-medium text-navy-600 hover:text-navy-900">Home</a>
          <a href="/about" class="block py-2 text-sm font-medium text-navy-600 hover:text-navy-900">About</a>
          <a href="/portfolio" class="block py-2 text-sm font-medium text-navy-600 hover:text-navy-900">Portfolio</a>
          <a href="/research" class="block py-2 text-sm font-medium text-navy-600 hover:text-navy-900">Research</a>
          <a href="/assessment" class="block py-2 text-sm font-medium text-gold-600 hover:text-gold-700">RLI Assessment</a>
          <a href="/contact" class="block py-2 text-sm font-medium text-white bg-navy-800 rounded-lg text-center">Get in Touch</a>
        </div>
      </div>
    </nav>

    <!-- Main content -->
    <main>
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-navy-900 text-navy-200 mt-20">
      <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid md:grid-cols-3 gap-8">
          <div>
            <h3 class="font-serif text-lg font-bold text-white mb-3">Dr. Hamidah Che Abdul Hamid</h3>
            <p class="text-sm text-navy-300">30 years of transforming schools. Published researcher in educational leadership and resilience. Ready for the next chapter.</p>
          </div>
          <div>
            <h4 class="text-sm font-semibold text-white uppercase tracking-wider mb-3">Quick Links</h4>
            <ul class="space-y-2 text-sm">
              <li><a href="/about" class="hover:text-white transition-colors">Career Journey</a></li>
              <li><a href="/portfolio" class="hover:text-white transition-colors">School Portfolio</a></li>
              <li><a href="/research" class="hover:text-white transition-colors">Research & Publications</a></li>
              <li><a href="/assessment" class="hover:text-white transition-colors">RLI Assessment Tool</a></li>
              <li><a href="/contact" class="hover:text-white transition-colors">Contact</a></li>
            </ul>
          </div>
          <div>
            <h4 class="text-sm font-semibold text-white uppercase tracking-wider mb-3">Contact</h4>
            <ul class="space-y-2 text-sm">
              <li>üìß hamidahcheabdulhamid5678@gmail.com</li>
              <li>üìû +60 12-962 1017</li>
              <li>üìç Kelantan, Malaysia</li>
            </ul>
          </div>
        </div>
        <div class="border-t border-navy-700 mt-8 pt-8 text-center text-sm text-navy-400">
          <p>&copy; 2026 Dr. Hamidah Che Abdul Hamid. All rights reserved.</p>
        </div>
      </div>
    </footer>

    <!-- Mobile menu toggle -->
    <script>
      const btn = document.getElementById('mobile-menu-btn');
      const menu = document.getElementById('mobile-menu');
      btn?.addEventListener('click', () => {
        menu?.classList.toggle('hidden');
      });
    </script>
  </body>
</html>
