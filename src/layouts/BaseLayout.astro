---
interface Props {
  title: string;
  description: string;
  canonical?: string;
  ogImage?: string;
  ogType?: string;
  jsonLd?: object;
}

const { title, description, canonical, ogImage, ogType = 'website', jsonLd } = Astro.props;
const siteUrl = 'https://drhamidah.com';
const canonicalUrl = canonical || new URL(Astro.url.pathname, siteUrl).toString();
const ogImg = ogImage || `${siteUrl}/images/og-default.png`;
const siteName = 'Dr. Hamidah Che Abdul Hamid';
---

<!doctype html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#102a43" />
    <meta name="color-scheme" content="light" />

    <!-- Primary Meta -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />
    <meta name="author" content="Dr. Hamidah Che Abdul Hamid" />

    <!-- Open Graph -->
    <meta property="og:type" content={ogType} />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImg} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="Dr. Hamidah Che Abdul Hamid — Education Leader & Researcher" />
    <meta property="og:locale" content="en_MY" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImg} />
    <meta name="twitter:image:alt" content="Dr. Hamidah Che Abdul Hamid — Education Leader & Researcher" />

    <!-- Geo Meta -->
    <meta name="geo.region" content="MY-03" />
    <meta name="geo.placename" content="Kota Bharu, Kelantan" />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Preload fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" as="style" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />

    <!-- Person JSON-LD -->
    {jsonLd && (
      <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
    )}
  </head>
  <body class="bg-white text-navy-900 font-sans antialiased">
    <!-- Skip Link -->
    <a href="#main-content" class="sr-only focus:not-sr-only focus:fixed focus:top-2 focus:left-2 focus:z-[100] focus:bg-gold-500 focus:text-navy-900 focus:px-4 focus:py-2 focus:rounded-lg focus:font-semibold">
      Skip to main content
    </a>

    <!-- Navigation -->
    <nav class="sticky top-0 z-50 bg-white/95 backdrop-blur border-b border-navy-100" aria-label="Main navigation">
      <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <a href="/" class="font-serif text-xl font-bold text-navy-900 hover:text-gold-600 transition-colors duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-gold-500 focus-visible:ring-offset-2 rounded">
            Dr. Hamidah
          </a>
          <div class="hidden sm:flex items-center space-x-8">
            <a href="/" class="text-sm font-medium text-navy-600 hover:text-navy-900 transition-colors duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-gold-500 focus-visible:ring-offset-2 rounded">Home</a>
            <a href="/about" class="text-sm font-medium text-navy-600 hover:text-navy-900 transition-colors duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-gold-500 focus-visible:ring-offset-2 rounded">About</a>
            <a href="/portfolio" class="text-sm font-medium text-navy-600 hover:text-navy-900 transition-colors duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-gold-500 focus-visible:ring-offset-2 rounded">Portfolio</a>
            <a href="/research" class="text-sm font-medium text-navy-600 hover:text-navy-900 transition-colors duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-gold-500 focus-visible:ring-offset-2 rounded">Research</a>
            <a href="/assessment" class="text-sm font-medium text-gold-600 hover:text-gold-700 transition-colors duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-gold-500 focus-visible:ring-offset-2 rounded">RLI Assessment</a>
            <a href="/contact" class="text-sm font-medium text-white bg-navy-800 hover:bg-navy-700 px-4 py-2 rounded-lg transition-colors duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-gold-500 focus-visible:ring-offset-2">Get in Touch</a>
          </div>
          <!-- Mobile menu button -->
          <button id="mobile-menu-btn" class="sm:hidden p-2 rounded-md text-navy-600 hover:text-navy-900 hover:bg-navy-50 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-gold-500" aria-label="Toggle navigation menu" aria-expanded="false" aria-controls="mobile-menu">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </div>
      <!-- Mobile menu -->
      <div id="mobile-menu" class="hidden sm:hidden border-t border-navy-100 bg-white" role="menu">
        <div class="px-4 py-3 space-y-2">
          <a href="/" class="block py-2 text-sm font-medium text-navy-600 hover:text-navy-900 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-gold-500 rounded" role="menuitem">Home</a>
          <a href="/about" class="block py-2 text-sm font-medium text-navy-600 hover:text-navy-900 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-gold-500 rounded" role="menuitem">About</a>
          <a href="/portfolio" class="block py-2 text-sm font-medium text-navy-600 hover:text-navy-900 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-gold-500 rounded" role="menuitem">Portfolio</a>
          <a href="/research" class="block py-2 text-sm font-medium text-navy-600 hover:text-navy-900 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-gold-500 rounded" role="menuitem">Research</a>
          <a href="/assessment" class="block py-2 text-sm font-medium text-gold-600 hover:text-gold-700 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-gold-500 rounded" role="menuitem">RLI Assessment</a>
          <a href="/contact" class="block py-2 text-sm font-medium text-white bg-navy-800 rounded-lg text-center focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-gold-500" role="menuitem">Get in Touch</a>
        </div>
      </div>
    </nav>

    <!-- Main content -->
    <main id="main-content">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-navy-900 text-navy-200 mt-20">
      <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid md:grid-cols-3 gap-8">
          <div>
            <h3 class="font-serif text-lg font-bold text-white mb-3">Dr. Hamidah Che Abdul Hamid</h3>
            <p class="text-sm text-navy-300">30 years of transforming schools. Published researcher in educational leadership and resilience. Ready for the next chapter.</p>
          </div>
          <div>
            <h4 class="text-sm font-semibold text-white uppercase tracking-wider mb-3">Quick Links</h4>
            <ul class="space-y-2 text-sm">
              <li><a href="/about" class="hover:text-white transition-colors">Career Journey</a></li>
              <li><a href="/portfolio" class="hover:text-white transition-colors">School Portfolio</a></li>
              <li><a href="/research" class="hover:text-white transition-colors">Research & Publications</a></li>
              <li><a href="/assessment" class="hover:text-white transition-colors">RLI Assessment Tool</a></li>
              <li><a href="/contact" class="hover:text-white transition-colors">Contact</a></li>
            </ul>
          </div>
          <div>
            <h4 class="text-sm font-semibold text-white uppercase tracking-wider mb-3">Contact</h4>
            <ul class="space-y-3 text-sm">
              <li class="flex items-center gap-2">
                <svg class="w-4 h-4 text-navy-400 flex-shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><rect x="2" y="4" width="20" height="16" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
                hamidahcheabdulhamid5678@gmail.com
              </li>
              <li class="flex items-center gap-2">
                <svg class="w-4 h-4 text-navy-400 flex-shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
                +60 12-962 1017
              </li>
              <li class="flex items-center gap-2">
                <svg class="w-4 h-4 text-navy-400 flex-shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/><circle cx="12" cy="10" r="3"/></svg>
                Kelantan, Malaysia
              </li>
            </ul>
          </div>
        </div>
        <div class="border-t border-navy-700 mt-8 pt-8 text-center text-sm text-navy-400">
          <p>&copy; 2026 Dr. Hamidah Che Abdul Hamid. All rights reserved.</p>
        </div>
      </div>
    </footer>

    <!-- Mobile menu toggle -->
    <script>
      const btn = document.getElementById('mobile-menu-btn');
      const menu = document.getElementById('mobile-menu');
      btn?.addEventListener('click', () => {
        const isOpen = !menu?.classList.contains('hidden');
        menu?.classList.toggle('hidden');
        btn.setAttribute('aria-expanded', String(!isOpen));
      });
    </script>

    <!-- Reduced motion + global focus styles -->
    <style is:global>
      @media (prefers-reduced-motion: reduce) {
        *, *::before, *::after {
          animation-duration: 0.01ms !important;
          animation-iteration-count: 1 !important;
          transition-duration: 0.01ms !important;
          scroll-behavior: auto !important;
        }
      }
      /* Tabular nums for data */
      .tabular-nums { font-variant-numeric: tabular-nums; }
      /* Balanced headings */
      h1, h2, h3 { text-wrap: balance; }
    </style>
  </body>
</html>
